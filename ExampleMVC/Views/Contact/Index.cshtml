@model IEnumerable<ExampleMVC.Entities.Contact>

@{
    ViewData["Title"] = "Contact List";
}

<h2>Contacts</h2>

<p>
    <a asp-action="Create">New Contact</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(model => item.PhoneNumber)
                </td>

                <td>
                    @Html.DisplayFor(model => item.IsActive)
                </td>
                <td>
                    <a asp-action="Edit" a asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" a asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" a asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>